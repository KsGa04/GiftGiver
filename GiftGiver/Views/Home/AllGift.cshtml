@{
    Layout = "_Layout";
    ViewData["Title"] = "Лента подарков";
}
@model IEnumerable<GiftGiver.Подарки>
<section>
    <div class="search-container">
        <input type="text" id="search-term" placeholder="Введите запрос">
        <button id="search-button">Найти</button>
    </div>
    <div class="grid-container-allproducts">
        @foreach (var подарок in Model)
        {
            if (подарок.Изображение != null)
            {
                <div class="grid-item-allproducts">
                    <img src="data:image;base64,@(Convert.ToBase64String(подарок.Изображение))" />
                </div>
            }
        }
    </div>
</section>